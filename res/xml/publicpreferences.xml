<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="LAYER MOCK" >
        <ListPreference
            android:defaultValue="1"
            android:entries="@array/layers"
            android:entryValues="@array/layerValues"
            android:key="layers"
            android:title="Layer" />
    </PreferenceCategory>
    <PreferenceCategory android:title="MAP VIEW">
        <mil.nga.giat.mage.preferences.MapViewPreference
            android:title="Map View"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="ABOUT">
        <EditTextPreference
            android:key="serverURL"
            android:title="URL"/>
        <Preference
            android:key="username"
            android:title="Username"/>
        <Preference
            android:key="appVersion"
            android:title="App Version"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="MEDIA">
        <ListPreference 
            android:defaultValue="1"
            android:entries="@array/imageUploadSize"
            android:entryValues="@array/imageUploadSizeValues"
            android:key="imageUploadSize"
            android:title="Image Upload Size"/>
    </PreferenceCategory>

</PreferenceScreen>