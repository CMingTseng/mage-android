<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
	    android:id="@+id/background_map"
	    layout="@layout/fragment_map"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" 
	    />
    <LinearLayout android:orientation="vertical"
        android:background="@drawable/semi_see_through_background"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
        <LinearLayout 
            style="?android:attr/buttonBarStyle"
            android:background="@drawable/semi_see_through_background"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent">
            <ImageButton 
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:contentDescription="voice"
                android:src="@drawable/ic_edit"/>
            <ImageButton 
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="camera"
                android:src="@drawable/ic_camera"/>
            <ImageButton 
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_video"/>
        </LinearLayout>
    
    <ScrollView android:fillViewport="true"
        
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dip">
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:paddingBottom="20dip">
	        <TextView 
	            android:id="@+id/date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingBottom="5dip"
	            style="@style/EditTextView"/>
	        <TextView 
	            android:id="@+id/location"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:textColor="#777777"
	          android:textStyle="italic"
	          android:textSize="13sp"
	          style="@style/EditTextView"/>
	    </LinearLayout>
	    <TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          style="@style/EditTextView"
	          android:text="Type"/>
	    <Spinner
		    android:id="@+id/type_spinner"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dip"
	       	android:layout_marginBottom="20dip" 
	       	android:entries="@array/types_array"/>
	    <TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          style="@style/EditTextView"
	          android:text="Level"/>
	    <EditText 
	        android:id="@+id/level"
	        android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="5dip"
	          android:layout_marginBottom="20dip"
	          android:singleLine="true"/>
	    <TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          style="@style/EditTextView"
	          android:text="Team"/>
	    <EditText 
	        android:id="@+id/team"
	        android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="5dip"
	          android:layout_marginBottom="20dip"
	          android:singleLine="true"/>
	    <TextView android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          style="@style/EditTextView"
	          android:text="Description"/>

	    <EditText
	        android:id="@+id/description"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dip"
	        android:hint="Description"
	        android:minLines="4" />

	    <!-- Login button -->
	    <!-- 
	    <Button android:id="@+id/btnLogin"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="10dip"
	          android:text="Login"/>
	     -->
	    <!-- Link to Registration Screen -->
		<!-- 
	    <TextView android:id="@+id/link_to_register"
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="40dip"
	          android:layout_marginBottom="40dip"
	          android:text="New to Twitter? Register here"
	          android:gravity="center"
	          android:textSize="20dip"
	          android:textColor="#0b84aa"/>
		 -->
	</LinearLayout>
	        
    </ScrollView>
    </LinearLayout>

</RelativeLayout>