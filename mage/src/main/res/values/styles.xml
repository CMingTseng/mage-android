<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseTheme.ActionBar.OverlayMap" parent="AppBaseTheme">
        <item name="android:actionMenuTextColor">@drawable/overlay_actionbar_text</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="EditTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#372c24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#333333</item>
    </style>

</resources>