<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppBaseTheme.ActionBar.OverlayMap" parent="AppBaseTheme">
        <item name="android:actionMenuTextColor">@drawable/overlay_actionbar_text</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="ListSubheader">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="ListTextPrimary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ListTextSecondaryDark">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ListTextSecondary">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="ObservationPropertyLabel">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:alpha">.87</item>
    </style>

    <style name="ObservationPropertyValue">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8A000000</item>
    </style>

    <style name="ObservationImportant">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#D50000</item>
        <item name="android:alpha">.54</item>
    </style>

    <style name="EditTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#372c24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ViewTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#999999</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#BEBEBE</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#333333</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">#89000000</item>
    </style>

    <style name="customCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>