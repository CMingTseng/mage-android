<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mageForm="http://schemas.android.com/apk/res-auto"
    android:id="@+id/observation_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="5dip"
    android:paddingBottom="13dip"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/observation_marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dip"
            android:src="@drawable/ic_pinpoint" />

        <mil.nga.giat.mage.form.MageTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="TYPE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            mageForm:propertyKey="TYPE" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="Nancy Drew"
            android:textAppearance="?android:attr/textAppearanceSmall"/>
        <mil.nga.giat.mage.form.MageTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="DATE"
                style="@style/ViewTextView"
                android:textAppearance="?android:attr/textAppearanceSmall"
                mageForm:propertyKey="EVENTDATE"
                mageForm:propertyType="date" />


<!--     <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" > -->

                <TextView
                    style="@style/ViewTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Description" />

                <mil.nga.giat.mage.form.MageTextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="DESCRIPTION" 
                    mageForm:propertyType="string"
                    mageForm:propertyKey="DESCRIPTION" />

              

       
 <!--        </LinearLayout> -->
        </LinearLayout> 
<!--         <ImageView
            android:id="@+id/observation_thumb"
            android:layout_gravity="center_vertical|right"
            android:layout_width="48dip"
            android:layout_height="48dip" 
    		android:paddingRight="5dip"/> -->
        
        <ImageView
            android:id="@+id/observation_thumb"
            android:layout_gravity="center_vertical|right"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="fill_parent" 
    		android:paddingRight="5dip"/>
    </LinearLayout>
</LinearLayout>
