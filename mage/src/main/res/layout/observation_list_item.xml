<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mageForm="http://schemas.android.com/apk/res-auto"
    android:id="@+id/observation_list_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="8dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/observation_marker"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_place_black_24dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type"
                style="@style/ListTextPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/variant"
                style="@style/ListTextSecondaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/user"
                style="@style/ListTextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dip">

            <TextView
                android:id="@+id/time"
                style="@style/ListTextSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"/>

            <ImageView
                android:id="@+id/flagged"
                android:layout_width="16dip"
                android:layout_height="16dip"
                android:layout_gravity="end"
                android:tint="@color/observation_flag_active"
                android:src="@drawable/ic_flag_white_24dp"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dip">

            <LinearLayout
                android:id="@+id/image_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dip" />

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="48dip"
            android:layout_marginEnd="16dip"
            android:gravity="start">


            <LinearLayout
                android:id="@+id/favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="24dip"
                android:paddingBottom="20dip"
                android:paddingStart="24dp"
                android:paddingEnd="24dip"
                android:clickable="true">

                <ImageView
                    android:id="@+id/favoriteIcon"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_marginEnd="3dip"
                    android:tint="#8AFFFFFF"
                    android:src="@drawable/ic_favorite_white_24dp"/>

                <TextView
                    android:id="@+id/favoriteCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/ListTextSecondary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>