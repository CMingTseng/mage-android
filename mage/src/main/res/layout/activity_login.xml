<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:windowSoftInputMode="stateVisible" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?attr/colorPrimary" >

        <include
            android:id="@+id/login_header"
            layout="@layout/mage_header" />

        <!-- Loading spinner -->
        <LinearLayout
            android:id="@+id/login_status"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:src="@drawable/ic_wand"/>
                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:indeterminateDrawable="@drawable/mage_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="50dip" />
            </LinearLayout>
            <TextView
                android:id="@+id/login_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="Logging in..."
                android:textColor="#EEEEEE"
                android:textSize="26sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/server_configuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:paddingBottom="24dip"
            android:paddingLeft="24dip"
            android:paddingRight="24dip">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dip"
                android:layout_marginBottom="7dip"
                android:orientation="vertical"
                android:clickable="true"
                android:onClick="changeServerURL">

                <TextView
                    android:id="@+id/server_configuration_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MAGE server URL not set, click here to change."
                    android:textColor="#A8FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Login Form -->
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="80dp"
            android:paddingBottom="24dip"
            android:paddingLeft="24dip"
            android:paddingRight="24dip">

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/third_party_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/google_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign in with Google"
                    android:background="@drawable/common_google_signin_btn_text_light"
                    android:textColor="#8A000000"
                    android:textAlignment="gravity"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/or"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dip"
                android:paddingBottom="20dip">

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dp"
                    android:background="#A8FFFFFF"
                    android:layout_weight=".5"
                    android:layout_marginTop="10dip"/>

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="or"
                    android:textColor="#A8FFFFFF"
                    android:layout_weight=".15" />

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dp"
                    android:background="#A8FFFFFF"
                    android:layout_weight=".5"
                    android:layout_marginTop="10dip"/>

            </LinearLayout>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/local_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/login_username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dip"
                    android:layout_marginTop="7dip"
                    android:hint="Username"
                    android:imeOptions="actionNext"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:maxLines="1"
                    android:theme="@style/AppTheme.White"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/login_password"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="7dip"
                        android:layout_marginTop="7dip"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:imeActionLabel="Log In"
                        android:maxLines="1"
                        android:theme="@style/AppTheme.White" />

                    <TextView
                        android:id="@+id/toggle_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="2dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingEnd="2dp"
                        android:textColor="@color/md_white_1000"
                        android:textSize="12dip"
                        android:text="SHOW"
                        android:textStyle="bold|italic"
                        android:clickable="true"
                        android:visibility="gone">
                    </TextView>

                </RelativeLayout>

                <!-- Login button -->
                <Button
                    android:id="@+id/local_login_button"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="@drawable/login_button_states"
                    android:text="Log In"
                    android:enabled="false"
                    android:textColor="#EEEEEE" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/sign_up"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dip"
                android:orientation="horizontal" >

                <!-- Link to Signup Screen? -->
                <TextView
                    android:id="@+id/link_to_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="signup"
                    android:text="New to MAGE? Signup here"
                    android:textColor="#EEEEEE"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/server_url"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#8AFFFFFF"
                    android:textSize="13sp"
                    android:clickable="true"
                    android:onClick="changeServerURL"/>

                <TextView
                    android:id="@+id/error_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="#8AFFFFFF"
                    android:textSize="13sp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/login_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:gravity="center"
                android:textColor="#8AFFFFFF"
                android:textSize="11dp"
                android:text="App Version: 5.0.1"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>